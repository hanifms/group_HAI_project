# Development CSP Environment Variables
# Use these settings in your .env file for development

# Enable CSP but use report-only mode for testing
CSP_ENABLED=true
CSP_REPORT_ONLY=true

# Disable HSTS for development (only use on HTTPS in production)
HSTS_ENABLED=false

# Additional Security Headers - Development friendly settings
X_FRAME_OPTIONS=SAMEORIGIN
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION="1; mode=block"
REFERRER_POLICY=strict-origin-when-cross-origin
PERMISSIONS_POLICY="camera=(), microphone=(), geolocation=()"

# CSP violation reporting endpoint (optional)
# CSP_REPORT_URI=http://localhost:8000/csp-report
# CSP_REPORT_TO=csp-endpoint
